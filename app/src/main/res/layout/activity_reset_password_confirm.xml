<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResetPasswordConfirm">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Logo and Top Image -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/topci" />

        <ImageView
            android:layout_width="184dp"
            android:layout_height="185dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/logo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="545dp"
            android:layout_marginLeft="58dp"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forgotbtn"
            android:background="@color/trans"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="35dp"/>

        <ImageView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="380dp"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/blackbordr" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="386dp"
            android:layout_marginLeft="58dp"
            android:background="@drawable/rnd_textbox"
            android:padding="10dp"
            android:hint="Password" />

        <ImageView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="460dp"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/blackbordr" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="466dp"
            android:layout_marginLeft="58dp"
            android:background="@drawable/rnd_textbox"
            android:padding="10dp"
            android:hint="Confirm Password" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="560dp"
            android:background="@color/trans"
            android:src="@drawable/signinbtn1" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="740dp"
            android:layout_marginLeft="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/rnd_textbox"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/topci" />


        </LinearLayout>
    </FrameLayout>

</LinearLayout>