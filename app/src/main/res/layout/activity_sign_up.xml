<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/topci"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/logo"
            android:layout_marginLeft="60dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/supblue"
            android:background="@color/trans"
            android:layout_marginTop="299dp"
            android:layout_marginLeft="39dp" />

        <ImageButton
            android:id="@+id/regSignBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/supwhite"
            android:background="@color/trans"
            android:layout_marginTop="298dp"
            android:layout_marginLeft="200dp"/>

        <EditText
            android:id="@+id/signupName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="370dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="58dp"
            android:background="@drawable/rnd_textbox"
            android:padding="10dp"
            android:hint="Name" />

        <ImageView
            android:layout_width="320dp"
            android:layout_height="53dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="370dp"
            android:src="@drawable/blackbordr"
            android:background="@color/trans"/>

        <EditText
            android:id="@+id/signupEmail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="440dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="58dp"
            android:background="@drawable/rnd_textbox"
            android:padding="10dp"
            android:hint="Email" />

        <ImageView
            android:layout_width="320dp"
            android:layout_height="53dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="440dp"
            android:src="@drawable/blackbordr"
            android:background="@color/trans"/>

        <EditText
            android:id="@+id/signupPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="510dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="58dp"
            android:background="@drawable/rnd_textbox"
            android:padding="10dp"
            android:hint="Password" />

        <ImageView
            android:layout_width="320dp"
            android:layout_height="53dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="510dp"
            android:src="@drawable/blackbordr"
            android:background="@color/trans"/>

        <EditText
            android:id="@+id/signupConfirmPass"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="580dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="58dp"
            android:background="@drawable/rnd_textbox"
            android:padding="10dp"
            android:hint="Confirm Password" />

        <ImageView
            android:layout_width="320dp"
            android:layout_height="53dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="580dp"
            android:src="@drawable/blackbordr"
            android:background="@color/trans"/>

        <ImageButton
            android:id="@+id/signupRegbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/signupbtnreg"
            android:background="@color/white"
            android:layout_marginTop="660dp"
            android:layout_marginLeft="140dp"/>

    </FrameLayout>

</LinearLayout>